@model HomeIndexVM
@{
    ViewData["Title"] = "Index";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                  
                        <table class="table-bordered table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>
                                        <a asp-action="Create" class="btn btn-outline-success btn-block btn-lg">
                                            Create New Category
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cat in Model.Categories)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/feature/@cat.CategoryImage" width="150" />
                                        </td>
                                        <td>@cat.Name</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-warning">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            @*@if (Model.Count() > 2)
                                                {*@
                                            <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                            @*}*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


